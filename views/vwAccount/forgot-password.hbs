{{#section "signupjs"}}
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const errorMessage = "{{this.errorMessage}}"; // Lấy giá trị của errormessage từ template
        if (errorMessage.length > 0) {
            Swal.fire({
                title: 'Error',
                text: errorMessage,
                icon: 'error',
                confirmButtonText: 'OK'
            });
            return;
        }
    });
</script>
{{/section}}
<div class="card" id="card-contain">
    <div id="signup-card" class="card-body">
        <div class="d-flex flex-column justify-content-center align-items-center mb-5">
            <img id="logo-img" src="/static/imgs/NEWSLANDlogoRmBg.png" alt="" class="img-fluid rounded-circle">
            <h1>Forgot Password</h1>
        </div>
        <div class="card-body d-flex flex-column justify-content-center align-items-center">
            <form action="/account/forgot-password" method="POST">
                <div class="mb-2 form-group mb-3">
                    <label class="form-label" for="txtEmail">Username</label>
                    <input type="text" name="username" id="txtUsername" class="form-control txt-input"
                        placeholder="your username">
                </div>
                <div class="mb-2 form-group mb-3">
                    <label class="form-label" for="txtEmail">Your Email</label>
                    <input type="text" name="email" id="txtEmail" class="form-control txt-input" placeholder="Please input your email...">
                </div>
                <button type="submit" class="btn btn-info btn-connect mb-3" href="#">Send OTP</button>
            </form>
        </div>
        <div class="d-flex justify-content-center align-items-end gap-10">
            <label><a href="/account/login" class="link-underline-dark link-pw">Back to Sign in</a></label>
        </div>
    </div>
</div>