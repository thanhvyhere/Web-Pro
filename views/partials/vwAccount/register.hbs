<div id="registerModel" class="popupModel tw-z-[200] tw-fixed tw-inset-0 tw-bg-black/50 tw-items-center tw-flex tw-justify-center tw-hidden">

  <!-- NỘI DUNG MODAL -->
  <div class="tw-font-semibold tw-bg-gray-50 tw-rounded-lg tw-shadow-md tw-max-w-3xl tw-w-full tw-px-4 tw-py-6">

    <!-- BƯỚC INDICATORS -->
    <div class="tw-flex tw-justify-center tw-gap-4 tw-mb-6">
      <div id="step1Indicator" class="tw-w-10 tw-h-10 tw-rounded-full tw-flex tw-items-center tw-justify-center tw-bg-blue-600 tw-text-white">1</div>
      <div id="step2Indicator" class="tw-w-10 tw-h-10 tw-rounded-full tw-flex tw-items-center tw-justify-center tw-bg-gray-300 tw-text-black">2</div>
    </div>

    <!-- BƯỚC 1: ĐĂNG KÝ -->
    <div id="step1">
      <span class="tw-px-8 tw-text-xl">Sign up new account</span>
      <form id="fmSignup" method="post" action="/account/register" class="tw-bg-white tw-p-8 tw-space-y-6">
        <div class="tw-grid tw-grid-cols-1 sm:tw-grid-cols-2 tw-gap-6">
          <div>
            <label for="txtName" class="tw-block tw-text-sm tw-font-medium tw-text-gray-700 tw-mb-1">Full Name</label>
            <input type="text" id="txtName" name="name" placeholder="John"
              class="tw-w-full tw-px-4 tw-py-3 tw-rounded-md tw-bg-gray-100 tw-text-gray-800 tw-text-sm tw-focus:bg-white tw-focus:outline-none tw-focus:ring-2 tw-focus:ring-blue-500" />
          </div>
          <div>
            <label for="txtUsername" class="tw-block tw-text-sm tw-font-medium tw-text-gray-700 tw-mb-1">User Name</label>
            <input type="text" id="txtUsername" name="username" placeholder="Doe"
              class="tw-w-full tw-px-4 tw-py-3 tw-rounded-md tw-bg-gray-100 tw-text-gray-800 tw-text-sm tw-focus:bg-white tw-focus:outline-none tw-focus:ring-2 tw-focus:ring-blue-500" />
          </div>
          <div>
            <label for="txtEmail" class="tw-block tw-text-sm tw-font-medium tw-text-gray-700 tw-mb-1">Email</label>
            <input type="email" id="txtEmail" name="email" placeholder="you@example.com"
              class="tw-w-full tw-px-4 tw-py-3 tw-rounded-md tw-bg-gray-100 tw-text-gray-800 tw-text-sm tw-focus:bg-white tw-focus:outline-none tw-focus:ring-2 tw-focus:ring-blue-500" />
          </div>
          <div>
            <label for="txtPhone" class="tw-block tw-text-sm tw-font-medium tw-text-gray-700 tw-mb-1">Phone</label>
            <input type="tel" id="txtPhone" name="number" placeholder="123-456-7890"
              class="tw-w-full tw-px-4 tw-py-3 tw-rounded-md tw-bg-gray-100 tw-text-gray-800 tw-text-sm tw-focus:bg-white tw-focus:outline-none tw-focus:ring-2 tw-focus:ring-blue-500" />
          </div>
          <div>
            <label for="txtPassword" class="tw-block tw-text-sm tw-font-medium tw-text-gray-700 tw-mb-1">Password</label>
            <input type="password" id="txtPassword" name="raw_password" placeholder="••••••••"
              class="tw-w-full tw-px-4 tw-py-3 tw-rounded-md tw-bg-gray-100 tw-text-gray-800 tw-text-sm tw-focus:bg-white tw-focus:outline-none tw-focus:ring-2 tw-focus:ring-blue-500" />
            <small id="passwordError" class="tw-text-red-500 tw-text-xs tw-mt-1 tw-hidden"></small>
          </div>
          <div>
            <label for="txtCPassword" class="tw-block tw-text-sm tw-font-medium tw-text-gray-700 tw-mb-1">Confirm Password</label>
            <input type="password" id="txtCPassword" name="cpassword" placeholder="••••••••"
              class="tw-w-full tw-px-4 tw-py-3 tw-rounded-md tw-bg-gray-100 tw-text-gray-800 tw-text-sm tw-focus:bg-white tw-focus:outline-none tw-focus:ring-2 tw-focus:ring-blue-500" />
            <small id="confirmPasswordError" class="tw-text-red-500 tw-text-xs tw-mt-1 tw-hidden"></small>
          </div>
        </div>

        <div class="tw-text-center tw-pt-6">
          <button type="submit" class="tw-w-full sm:tw-w-auto tw-px-6 tw-py-3 tw-rounded-md tw-bg-blue-600 tw-text-white tw-font-medium tw-text-sm hover:tw-bg-blue-700 tw-transition tw-duration-300">
            Sign Up
          </button>
          <p class="tw-text-sm tw-text-gray-600 tw-mt-4">Already have an account?
            <a onclick="handleLoginClick(event)" class="tw-text-blue-600 tw-font-bold hover:tw-underline">Login here</a>
          </p>
        </div>
      </form>
    </div>

    <!-- BƯỚC 2: OTP -->
    <div id="step2" class="tw-hidden">
      <form id="frmVerify" action="/account/verify-email" method="post"
        class="tw-bg-white tw-p-6 tw-rounded-xl tw-shadow-lg tw-w-full tw-relative">
        <input type="hidden" name="email" id="otpEmail" value="">
        <input type="hidden" name="username" id="otpUsername" value="">
        <h2 class="tw-text-xl tw-font-semibold tw-mb-4 tw-text-gray-700">Enter OTP</h2>
        <input type="text" id="otpInput" name="otp"
          class="tw-w-full tw-px-4 tw-py-3 tw-rounded-md tw-bg-gray-100 tw-text-gray-800 tw-text-sm tw-focus:bg-white tw-focus:outline-none tw-focus:ring-2 tw-focus:ring-blue-500"
          placeholder="Enter the OTP sent to your email" />
        <button type="submit"
          class="tw-mt-4 tw-w-full tw-px-4 tw-py-2 tw-rounded-md tw-bg-blue-600 tw-text-white tw-font-medium hover:tw-bg-blue-700">Verify</button>
      </form>
    </div>

  </div>
</div>