{{#section "css"}}
    <link rel="stylesheet" href="/static/css/life.css">
{{/section}}

<!-- Phần Header chứa tiêu đề của trang -->
<header class="page-header">
    <h2>Tin Tức Cuộc Sống</h2>
</header>

<!-- Phần Body chứa các bài viết, nhóm theo thể loại -->
<div class="category-container">
    {{#each articles}}
        <div class="category-section">
            <div class="news-list">
                {{#each this.articles}}
                    <div class="news-item">
                        <img src="{{this.imageUrl}}" alt="{{this.title}}" />
                        <h3>{{this.title}}</h3>
                        <p>{{this.summary}}</p>
                        <p><strong>Tác giả:</strong> {{this.author}}</p>
                        <p><strong>Danh mục:</strong> {{this.category}}</p>
                        <a href="/article/{{this.id}}" class="btn btn-primary">Đọc Thêm</a>
                    </div>
                {{/each}}
            </div>
        </div>
    {{/each}}
</div>

<script>
    window.addEventListener('load', () => {
        document.body.classList.add('loaded');
    });
</script>