<div class="tw-max-w-3xl tw-mx-auto tw-bg-white tw-shadow-md tw-rounded-xl tw-p-8 tw-border tw-border-gray-200">
  <!-- Header -->
  <div class="tw-flex tw-items-center tw-justify-between tw-mb-6">
    <h1 class="tw-text-2xl tw-font-bold tw-text-gray-800">User Details</h1>
    <a href="/administrator/manage_users" class="tw-text-sm tw-text-blue-600 hover:tw-underline">‚Üê Back to Users</a>
  </div>

  <!-- User Info Table -->
  <div class="tw-overflow-x-auto">
    <table class="tw-w-full tw-text-left tw-text-gray-700">
      <tbody>
        <tr class="tw-border-b">
          <th class="tw-py-2 tw-font-medium tw-pr-4">ID:</th>
          <td class="tw-py-2">{{user._id}}</td>
        </tr>
        <tr class="tw-border-b">
          <th class="tw-py-2 tw-font-medium tw-pr-4">Username:</th>
          <td class="tw-py-2">{{user.username}}</td>
        </tr>
        <tr class="tw-border-b">
          <th class="tw-py-2 tw-font-medium tw-pr-4">Name:</th>
          <td class="tw-py-2">{{user.name}}</td>
        </tr>
        <tr class="tw-border-b">
          <th class="tw-py-2 tw-font-medium tw-pr-4">Email:</th>
          <td class="tw-py-2">{{user.email}}</td>
        </tr>
        <tr class="tw-border-b">
          <th class="tw-py-2 tw-font-medium tw-pr-4">Role:</th>
          <td class="tw-py-2">{{user.role}}</td>
        </tr>
        <tr class="tw-border-b">
          <th class="tw-py-2 tw-font-medium tw-pr-4">Date of Birth:</th>
          <td class="tw-py-2">{{user.dob}}</td>
        </tr>
        <tr class="tw-border-b">
          <th class="tw-py-2 tw-font-medium tw-pr-4">Followers:</th>
          <td class="tw-py-2">{{user.NoOfFollower}}</td>
        </tr>
        <tr>
          <th class="tw-py-2 tw-font-medium tw-pr-4">Following:</th>
          <td class="tw-py-2">{{user.NoOfFollowing}}</td>
        </tr>
      </tbody>
    </table>
  </div>

  <!-- Action Buttons -->
  <div class="tw-mt-6 tw-flex tw-gap-4">
    <a href="/administrator/manage_users/update/{{user._id}}"
       class="tw-bg-orange-500 tw-text-white tw-px-4 tw-py-2 tw-rounded-md hover:tw-bg-orange-600 tw-font-medium">
      Edit
    </a>
    <a href="/administrator/manage_users/delete/{{user._id}}"
       class="tw-bg-red-600 tw-text-white tw-px-4 tw-py-2 tw-rounded-md hover:tw-bg-red-700 tw-font-medium">
      Delete
    </a>
  </div>
</div>
