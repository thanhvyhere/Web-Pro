<div class="tw-container tw-mx-auto tw-px-4 tw-py-6">
  <!-- Tiêu đề -->
  <div class="tw-mb-6">
    <h1 class="tw-text-3xl tw-font-bold tw-text-gray-800 tw-shadow-[2px_2px_4px_rgba(0,0,0,0.2)]">
      Manage Articles
    </h1>
  </div>

  <!-- Bảng danh sách -->
  <div class="tw-overflow-x-auto">
    <table class="tw-min-w-full tw-table-auto tw-bg-white tw-shadow tw-rounded-lg tw-border tw-border-solid tw-border-gray-200">
      <thead class="tw-bg-orange-100">
        <tr class="tw-text-left tw-text-gray-700 tw-text-sm">
          <th class="tw-px-4 tw-py-2">Published Day</th>
          <th class="tw-px-4 tw-py-2">Title</th>
          <th class="tw-px-4 tw-py-2">Author</th>
          <th class="tw-px-4 tw-py-2">Premium</th>
          <th class="tw-px-4 tw-py-2">Actions</th>
        </tr>
      </thead>
      <tbody>
        {{#each articles}}
        <tr class="tw-border-t hover:tw-bg-gray-50">
          <td class="tw-px-4 tw-py-2">{{formatDate this.PublishedDay}}</td>
          <td class="tw-px-4 tw-py-2 tw-font-medium">{{this.Title}}</td>
          <td class="tw-px-4 tw-py-2">{{this.AuthorName}}</td>
          <td class="tw-px-4 tw-py-2 tw-text-center">
            {{#if this.Premium}}
              <i class="bi bi-star-fill tw-text-yellow-500"></i>
            {{else}}
              <span>-</span>
            {{/if}}
          </td>
          <td class="tw-px-4 tw-py-2">
            <div class="tw-flex tw-gap-2">
              <a href="/newspaper/detail-raw?id={{this.NewsID}}"
                class="tw-inline-flex tw-items-center tw-gap-1 tw-px-3 tw-py-1 tw-text-sm tw-font-medium tw-text-white tw-bg-blue-600 tw-rounded hover:tw-bg-blue-700">
                <i class="bi bi-eye"></i> View
              </a>
              <a href="/administrator/manage_articles/update/{{this.NewsID}}"
                class="tw-inline-flex tw-items-center tw-gap-1 tw-px-3 tw-py-1 tw-text-sm tw-font-medium tw-text-white tw-bg-yellow-500 tw-rounded hover:tw-bg-yellow-600">
                <i class="bi bi-pencil-square"></i> Edit
              </a>
            </div>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <!-- Pagination -->
  <div class="tw-flex tw-justify-center tw-items-center tw-mt-8 tw-space-x-2">
    {{#if (gt currentPage 1)}}
      <a href="?page={{sub currentPage 1}}" class="tw-px-3 tw-py-1 tw-border tw-rounded tw-text-gray-700 hover:tw-bg-gray-100">Previous</a>
    {{/if}}

    {{#each (range 1 totalPages)}}
      <a href="?page={{this}}"
        class="tw-px-3 tw-py-1 tw-border tw-rounded {{#if (eq this ../currentPage)}}tw-bg-orange-400 tw-text-white{{else}}tw-text-gray-700 hover:tw-bg-gray-100{{/if}}">
        {{this}}
      </a>
    {{/each}}

    {{#if (lt currentPage totalPages)}}
      <a href="?page={{add currentPage 1}}" class="tw-px-3 tw-py-1 tw-border tw-rounded tw-text-gray-700 hover:tw-bg-gray-100">Next</a>
    {{/if}}
  </div>
</div>
