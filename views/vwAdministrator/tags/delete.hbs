<div class="tw-container tw-mx-auto tw-max-w-xl tw-px-4 tw-py-8">
  <!-- Tiêu đề -->
  <h1 class="tw-text-3xl tw-font-bold tw-text-red-600 tw-mb-4 tw-shadow-sm">
    Delete Tag
  </h1>

  <!-- Thông báo xác nhận -->
  <p class="tw-text-lg tw-text-gray-700 tw-mb-6">
    Are you sure you want to delete the tag: 
    <strong class="tw-text-red-600">{{tag.TagName}}</strong>?
  </p>

  <!-- Form xác nhận -->
  <form action="/administrator/manage_tags/delete/{{tag._id}}" method="POST" class="tw-flex tw-gap-4">
    <button
      type="submit"
      class="tw-bg-red-600 tw-text-white tw-px-5 tw-py-2 tw-rounded hover:tw-bg-red-700"
    >
      Yes, Delete
    </button>
    <a
      href="/administrator/manage_tags"
      class="tw-bg-gray-300 tw-text-gray-800 tw-px-5 tw-py-2 tw-rounded hover:tw-bg-gray-400"
    >
      Cancel
    </a>
  </form>
</div>
