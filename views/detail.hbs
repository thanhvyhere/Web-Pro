{{#section "css"}}
    <link rel="stylesheet" href="/static/css/detail.css">
{{/section}}

<!-- Phần Header chứa tiêu đề bài viết -->
<header class="page-header">
    <h1>{{article.title}}</h1>
</header>

<!-- Phần Body hiển thị nội dung chi tiết bài viết -->
<div class="article-container">
    <div class="article-detail">
        <div class="article-image-wrapper">
            <img src="{{article.imageUrl}}" alt="{{article.title}}" class="article-image" />
        </div>
        <div class="article-info">
            <p class="article-author"><strong>Tác giả:</strong> {{article.author}}</p>
            <p class="article-category"><strong>Danh mục:</strong> {{article.category}}</p>
            <p class="article-date"><strong>Ngày đăng:</strong> {{formatDate article.created_at}}</p>
        </div>
        <div class="article-content">
            <p>{{article.content}}</p>
        </div>
    </div>
    <a href="javascript:history.back()" class="btn btn-back">Quay lại</a>
</div>

<script>
    window.addEventListener('load', () => {
        document.body.classList.add('loaded');
    });

    // Format ngày tháng (nếu bạn cần)
    Handlebars.registerHelper('formatDate', function(date) {
        const options = { year: 'numeric', month: 'long', day: 'numeric' };
        return new Date(date).toLocaleDateString(undefined, options);
    });
</script>
