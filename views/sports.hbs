{{#section "css"}}
    <link rel="stylesheet" href="/static/css/sports.css">
{{/section}}

<header class="page-header">
    <h2>Tin Tức Thể Thao</h2>
</header>

<!-- Phần Body chứa các bài viết trộn lẫn theo thể loại -->
<div class="category-container">
    {{#each articles}}
        {{#each this.articles}} <!-- Trộn lẫn các bài viết từ các thể loại -->
            <div class="news-item">
                <img src="{{this.imageUrl}}" alt="{{this.title}}" />
                <h4>{{this.title}}</h4>
                <p>{{this.summary}}</p>
                <p><strong>Tác giả:</strong> {{this.author}}</p>
                <a href="/article/{{this.id}}" class="btn btn-primary">Đọc Thêm</a>
            </div>
        {{/each}}
    {{/each}}
</div>
